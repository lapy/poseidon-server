# NASA Earthdata Authentication
EARTHDATA_USERNAME=your_username_here
EARTHDATA_PASSWORD=your_password_here

# Global Fishing Watch API Authentication (REQUIRED for anthropogenic pressure data)
# Get your API key from: https://globalfishingwatch.org/our-apis/
# Without this, the system uses neutral (zero) anthropogenic pressure
GFW_API_KEY=your_gfw_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Data Cache Configuration
CACHE_DIR=data_cache
GRID_RESOLUTION=0.25

# GFW Configuration
GFW_API_URL=https://gateway.api.globalfishingwatch.org
GFW_CACHE_TTL_DAYS=30

# Note: GFW integration queries 8 major ocean basins and processes 500k+ vessel records
# Data is cached for 30 days after first fetch for optimal performance
